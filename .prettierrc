{
  "plugins": [
    "prettier-plugin-organize-imports"
  ],
  "tabWidth": 2,
  "useTabs": true,
  "semi": true,
  "singleQuote": false,
  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "useTabs": false
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}